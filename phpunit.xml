<?xml version="1.0" encoding="utf-8"?>
<phpunit bootstrap="tests/bootstrap.php"
         colors="true"
         stderr="true"
>
    <testsuites>
        <testsuite name="Test Suite">
            <directory>./tests/AccountBook/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>

    <php>
        <const name="PHPUNIT" value="true"/>
    </php>

    <groups>
        <exclude>
            <group>ignore</group>
        </exclude>
    </groups>

</phpunit>
